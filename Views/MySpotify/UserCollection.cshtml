@model IEnumerable<Collection>

<h3 style="color: azure">User Music Collection</h3>

<div class="row" style="border-bottom: 1px solid azure; padding-bottom: 1em">
    <div class="col-md-10">
        <form asp-action="UserCollection" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label style="color: azure">Select a User:</label>
                @Html.DropDownList("Id", ViewBag.UserList as SelectList)
                <input type="submit" value="Get Collection" class="btn" style="background-color: green"/>
            </div>
        </form>
    </div>
</div>

@if(Model != null)
{
    <table class="table">
    <thead style="color: azure">
        <tr>
            <th>
                Artist
            </th>
            <th>
                Song
            </th>
        </tr>
    </thead>
    <tbody style="color: green">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Music.Artist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Music.Song.Title)
            </td>

        </tr>
}
    </tbody>
</table>
<div class="row" style="border-bottom: 1px solid azure; padding-bottom: 1em">
    <div class="col-md-10">
        <form asp-action="UserCollection" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label style="color: azure">Add new Music to collection</label>
                <select name="id" asp-items="@ViewBag.MusicList"></select>
                <input type="submit" value="Add Music" class="btn" style="background-color: green"/>
                <input type="hidden" value="@Model.First().UserId" name="userId" />
            </div>
        </form>
    </div>
</div>
} 

@if(Model == null)
{
    <div class="row" style="border-bottom: 1px solid azure; padding-bottom: 1em; margin-top: 1em">
    <div class="col-md-10">
        <form asp-action="UserCollection" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label style="color: azure">Add new Music to collection</label>
                <select name="id" asp-items="@ViewBag.MusicList"></select>
                <input type="submit" value="Add Music" class="btn" style="background-color: green"/>
                <input type="hidden" value="@ViewBag.userId" name="userId" />
            </div>
        </form>
    </div>
</div>
}

